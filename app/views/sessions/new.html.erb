

<div class="container">

  <fieldset>
  <legend>&nbspWelcome back!&nbsp</legend>

  <form action="<%= session_path %>" method="post">

    <input  type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">

    <div class="input-field row">
    <label for="welcomeBackEmail">EMAIL</label>
    <input  id="welcomeBackEmail"
            type="email" 
            name="user[email]">
    </div>

    <div class="input-field row">
    <label for="welcomeBackPassword">PASSWORD</label>
    <input  id="welcomeBackPassword"
            type="password" 
            name="user[password]">
    </div>


    <button class="btn waves-effect waves-light" 
            type="submit" 
            name="action">SIGN IN
    </button>

</fieldset>
  </form>

  
  <br />

  <a href="<%= new_user_path %>">SIGN UP INSTEAD</a>
</div>

